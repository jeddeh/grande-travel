@model GrandeTravel.Site.Models.Payment.PaymentViewModel

@{
    ViewBag.Title = "Payment";
    ViewBag.Keywords = "";
    ViewBag.Description = "";
}

@using System.Web.Configuration;

<h1>Braintree Credit Card Transaction Form</h1>
<section class="container">
    <section class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("CreateTransaction", "Payment", FormMethod.Post, new { id = "braintree-payment-form" }))
            {
                @Html.AntiForgeryToken()
                <fieldset>
                    <legend>Create Transaction</legend>
                    <div class="form-group">
                        @Html.LabelFor(model => model.CCNumber)
                        @Html.EditorFor(model => model.CCNumber)
                        @Html.ValidationMessageFor(model => model.CCNumber)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CVV)
                        @Html.EditorFor(model => model.CVV)
                        @Html.ValidationMessageFor(model => model.CVV)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CCNumber)
                        @Html.EditorFor(model => model.ExpirationMonth)
                        @Html.ValidationMessageFor(model => model.ExpirationMonth)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CCNumber)
                        @Html.EditorFor(model => model.ExpirationYear)
                        @Html.ValidationMessageFor(model => model.ExpirationYear)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CCNumber)
                        @Html.EditorFor(model => model.Amount)
                        @Html.ValidationMessageFor(model => model.Amount)
                    </div>

                    <div>
                        <input type="submit" id="submit" class="btn btn-primary" />
                    </div>
                </fieldset>
            }
        </div>
    </section>
</section>

@section Scripts {
    <script src="https://js.braintreegateway.com/v1/braintree.js"></script>
    <script>
        var braintree = Braintree.create(@WebConfigurationManager.AppSettings["brainTreeClientSideEncryptionKey"]);
        braintree.onSubmitEncryptForm('braintree-payment-form');
    </script>
}
