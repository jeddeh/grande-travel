@model GrandeTravel.Site.Models.SearchProviderPackagesViewModel

@using GrandeTravel.Entity.Enums
@using GrandeTravel.Entity

@{
    ViewBag.Title = "My Packages";
    ViewBag.Keywords = "";
    ViewBag.Description = "";
}

<div class="container">
    <header>
        <h3>My Packages</h3>
    </header>

    <section class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <table class="table">
                <tr>
                    <th></th>
                </tr>

                @foreach (Package package in Model.Packages)
                {
                    <tr>
                        <td>
                            <strong>@Html.DisplayFor(modelItem => package.Name)</strong>
                        </td>

                        <td>
                            <div>
                                @{ if (package.Status == PackageStatusEnum.Available)
                                 {
                                    <button type="button" class="btn btn-xs btn-success">Available</button>
                                 }
                                 else if (package.Status == PackageStatusEnum.Discontinued)
                                 {
                                    <button type="button" class="btn btn-xs btn-danger">Discontinued</button>
                                 }
                                }
                            </div>
                        </td>

                        <td>
                            <button type="submit" class="btn btn-xs btn-primary">Edit Package Details</button>
                        </td>

                        <td>
                            <button type="submit" class="btn btn-xs btn-primary">Add New Activity</button>
                        </td>
                    </tr>

                    foreach (Activity activity in package.Activities)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => activity.Name)
                            </td>

                            <td>
                                <div>
                                    <button type="button" class="btn btn-xs btn-success">Available</button>
                                </div>
                            </td>

                            <td>
                                <button type="submit" class="btn btn-xs btn-primary">Edit Activity Details</button>
                            </td>
                        </tr>
                    }
                }

            </table>

        </div>
    </section>
</div>