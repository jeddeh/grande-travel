@model GrandeTravel.Site.Models.RegisterUserViewModel

@using GrandeTravel.Site.Helpers

@{
    ViewBag.Title = "Register";
    ViewBag.Keywords = "";
    ViewBag.Description = "";
}

@section styles {
    <link href="~/Content/clearcanvas/membership.css" rel="stylesheet" />
}

<div id="membership" class="register">
    <div class="container">
        <div class="row">

            <div class="col-md-12 membership-form">
                @using (Html.BeginForm("Create", "Membership", FormMethod.Post))
                {
                    <fieldset>
                        <legend>Membership</legend>

                        <header class="register-header">
                            <div class="header">
                                <h4>Create your account</h4>
                            </div>
                        </header>

                        <div class="row">
                            <section class="col-md-6">

                                <div class="editor-field">
                                    @Html.EditorFor(model => model.Email)
                                    @Html.ValidationMessageFor(model => model.Email)
                                    @Html.ValidationMessage("EmailAlreadyExists")
                                </div>

                                <div class="editor-field">
                                    @Html.EditorFor(model => model.Password)
                                    @Html.ValidationMessageFor(model => model.Password)
                                </div>

                                <div class="editor-field">
                                    @Html.EditorFor(model => model.ConfirmPassword)
                                    @Html.ValidationMessageFor(model => model.ConfirmPassword)
                                </div>


                                <div class="check-provider">
                                    @Html.CheckBoxFor(model => model.IsProvider)
                                    @Html.LabelFor(model => model.IsProvider, "I want to register as a travel provider.")
                                </div>

                                <div class="has-account">
                                    <span>Already have an account?</span>
                                    @Html.ActionLink("Login", "Index", "Login")
                                </div>

                                <div class="register-error">
                                    <p class="error-message">@Html.ValidationMessage("ErrorMessage")</p>
                                </div>

                            </section>

                            <section class="col-md-6">
                                <div class="editor-field">
                                    @Html.EditorFor(model => model.FirstName, new { maxlength = 50 })
                                    @Html.ValidationMessageFor(model => model.FirstName)
                                </div>

                                <div class="editor-field">
                                    @Html.EditorFor(model => model.LastName, new { maxlength = 50 })
                                    @Html.ValidationMessageFor(model => model.LastName)
                                </div>

                                <div class="editor-field">
                                    @Html.EditorFor(model => model.Address, new { maxlength = 100 })
                                    @Html.ValidationMessageFor(model => model.Address)
                                </div>

                                <div class="editor-field">
                                    @Html.EditorFor(model => model.City, new { maxlength = 50 })
                                    @Html.ValidationMessageFor(model => model.City)
                                </div>

                                <div class="editor-field">
                                    @Html.DropDownListFor(model => model.State,
                                        SelectListItemHelpers.GetAustralianStateSelectListItems(),
                                        new { @class = "form-control" })

                                    @Html.ValidationMessageFor(model => model.State)
                                </div>

                                <div class="editor-field">
                                    @Html.EditorFor(model => model.Postcode, new { maxlength = 4 })
                                    @Html.ValidationMessageFor(model => model.Postcode)
                                </div>

                                <div class="editor-field">
                                    @Html.EditorFor(model => model.Phone, new { maxlength = 15 })
                                    @Html.ValidationMessageFor(model => model.Phone)
                                </div>
                            </section>
                        </div>

                        <div>
                            <button type="submit" class="btn btn-primary membership-submit register-submit">Register</button>
                        </div>

                    </fieldset>
                }

            </div>
        </div>
    </div>
</div>
